package com.shatteredpixel.shatteredpixeldungeon.actors.mobs;

import com.shatteredpixel.shatteredpixeldungeon.Dungeon;
import com.shatteredpixel.shatteredpixeldungeon.utils.Random;

public class SmallCrab extends Mob {
    // ... твои параметры HP, урона и т.д. ...

    public static Mob spawnIfPossible() {
        // Проверяем этажи (1-4) и шанс 20%
        if (Dungeon.depth >= 1 && Dungeon.depth <= 4 && Random.Int(5) == 0) {
            return new SmallCrab();
        }
        return null;
    }
}

